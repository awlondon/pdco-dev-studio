{
  "name": "maya-dev-ui",
  "version": "0.1.0",
  "description": "Interactive LLM chat and code playground.",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "node --test --import tsx api/tests/auth.*.test.ts",
    "test:ui": "playwright test ui/tests/smoke.core-loop.spec.ts",
    "grant-plan": "node scripts/grant-plan.js",
    "test:comprehensive": "node --test tests/*.test.js",
    "frontend:dev": "npm --prefix pdco-frontend run dev",
    "frontend:build": "npm --prefix pdco-frontend run build",
    "frontend:preview": "npm --prefix pdco-frontend run preview",
    "frontend:lint": "npm --prefix pdco-frontend run lint",
    "perf:budgets": "node scripts/check-performance-budgets.js",
    "test:perf-budget": "playwright test ui/tests/perf.route-transition.budget.spec.ts",
    "prepare": "husky",
    "lint": "npm run frontend:lint",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json",
    "test:e2e": "playwright test ui/tests/smoke.core-loop.spec.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "monaco-editor": "^0.50.0",
    "pg": "^8.12.0",
    "tiktoken": "^1.0.21",
    "openai": "^4.104.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "tsx": "^4.19.1",
    "undici": "^6.19.2",
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "husky": "^9.1.6",
    "typescript": "^5.6.3"
  }
}
